<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.controlsfx.control.*?>

<AnchorPane id="AnchorPane" fx:id="anchorPane" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.CRUDCidadeController">
    <stylesheets>
        <URL value="@/styles/Styles.css" />
    </stylesheets>
    <children>
        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox spacing="2.0">
                    <children>
                        <VBox prefHeight="47.0" prefWidth="370.0" spacing="5.0">
                            <children>
                                <Label text="%nomeCidade.text" />
                                <TextField fx:id="txtFldNome" prefHeight="25.0" prefWidth="365.0" />
                            </children>
                            <HBox.margin>
                                <Insets left="3.0" right="3.0" top="3.0" />
                            </HBox.margin>
                        </VBox>
                    </children>
                </HBox>
            <HBox alignment="CENTER" maxHeight="25.0" prefHeight="25.0" prefWidth="190.0">
               <children>
                        <Button fx:id="btnConfirma" mnemonicParsing="false" onAction="#btnConfirmaClick" prefWidth="90.0" text="%confirmar.text">
                     <HBox.margin>
                        <Insets left="5.0" right="5.0" />
                     </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#btnCancelaClick" prefWidth="90.0" text="%cancelar.text">
                     <HBox.margin>
                        <Insets right="5.0" />
                     </HBox.margin>
                        </Button>
               </children>
               <VBox.margin>
                  <Insets top="6.0" />
               </VBox.margin>
            </HBox>
            
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
