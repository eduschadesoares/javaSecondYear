<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.PrincipalController">
   <children>
      <HBox prefHeight="200.0" prefWidth="600.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Label alignment="CENTER" prefHeight="50.0" prefWidth="200.0" text="Insira a altura" textAlignment="CENTER" />
                  <TextField fx:id="txtFldAltura" prefHeight="50.0" prefWidth="200.0">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin></TextField>
                  <Label alignment="CENTER" prefHeight="50.0" prefWidth="200.0" text="Insira o peso" textAlignment="CENTER" />
                  <TextField fx:id="txtFldPeso" prefHeight="50.0" prefWidth="200.0">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin></TextField>
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="200.0">
               <children>
                  <RadioButton fx:id="rdBtnGenero" mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0" selected="true" text="Masculino">
                     <VBox.margin>
                        <Insets left="60.0" right="60.0" />
                     </VBox.margin>
                     <toggleGroup>
                        <ToggleGroup fx:id="select" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" prefHeight="50.0" prefWidth="200.0" text="Feminino" toggleGroup="$select">
                     <VBox.margin>
                        <Insets left="60.0" right="60.0" />
                     </VBox.margin>
                  </RadioButton>
                  <Button fx:id="btnCalc" mnemonicParsing="false" onAction="#btnClick" prefHeight="50.0" prefWidth="200.0" text="Calcular">
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </VBox.margin></Button>
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="200.0">
               <children>
                  <Label fx:id="lblResult" alignment="CENTER" prefHeight="50.0" prefWidth="200.0" text="Resultado">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin></Label>
                  <Label fx:id="lblClass" alignment="CENTER" prefHeight="50.0" prefWidth="200.0" text="Classificação" />
               </children></VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
